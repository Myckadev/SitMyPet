{% extends 'base.html.twig' %}

{% block title %}Editeur de Pet{% endblock %}

{% block body %}
    <div>
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <div class="mainContainer modifProfilMain">
            <h1 style="margin-top: 100px" class="text-center">Modifier mon pet</h1>
            <div class="form-container mx-auto">
                {{ form_start(petEditForm) }}
                <div class="row">
                    <div class="col">
                        {{ form_row(petEditForm.editPicture) }}
                        {{ form_row(petEditForm.nickname) }}

                    </div>
                    <div class="col">
                        {{ form_row(petEditForm.description) }}

                    </div>
                </div>
                <div class="my-2 row">
                    <div class="col">
                        {{ form_row(petEditForm.age) }}
                        {{ form_row(petEditForm.type) }}
                    </div>
                </div>
                <div class="row w-75 mx-auto my-2 justify-content-center">
                    <button type="submit" class="btn btn-dark align-self-lg-center w-50">Modifier</button>
                    {{ form_end(petEditForm) }}
                </div>
            </div>
        </div>
    </div>



{% endblock %}

