{% extends 'base.html.twig' %}

{% block title %}Nouvelle Annonce{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/select2.css') }}">
{% endblock %}

{% block body %}

    <div class="mainContainer addAnnonceMain">
        <div class="form-container mx-auto">
            <div class="header-text my-3">
                <h1 class="text-center">Ajouter une annonce</h1>
            </div>
            {{ form_start(annonceForm) }}
            <div class="row">
                <div class="col">
                    {{ form_row(annonceForm.title) }}
                </div>
                <div class="col">
                    {{ form_row(annonceForm.description) }}
                </div>
            </div>
            <div class="row my-3">
                <div class="col">{{ form_row(annonceForm.date_start) }}</div>
                <div class="col">{{ form_row(annonceForm.date_end) }}</div>
            </div>
            <div class="row">
                <label for="pets">Animau(x)</label>
                {{ form_row(annonceForm.pets) }}
            </div>
            <div class="row w-75 mx-auto justify-content-center">
                <button type="submit" class="btn btn-dark align-self-lg-center w-50">Ajouter</button>
            </div>

        </div>
        {{ form_end(annonceForm) }}
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/select2.js') }}"></script>
        <script>
            $(function () {
                $('.select2').select2()
            })
        </script>
    {% endblock %}
{% endblock %}