{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="mainContainer">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <div class="mainContainer registerMain">
            <h1 style="margin-top: 100px" class="text-center">Inscription</h1>
            <div class="form-container mx-auto w-50">
                {{ form_start(profilEditForm) }}
                <div class="row">
                    <div class="col">
                        {{ form_row(profilEditForm.username) }}
                    </div>
                    <div class="col">
                        {{ form_row(profilEditForm.email) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(profilEditForm.nom) }}
                        {{ form_row(profilEditForm.prenom) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(profilEditForm.age) }}
                        {{ form_row(profilEditForm.roles, {'attr': {'class': 'form-select'} }) }}
                    </div>
                    <div class="col">
                        {{ form_row(profilEditForm.adresse) }}
                        {{ form_row(profilEditForm.pays) }}
                        {{ form_row(profilEditForm.ville) }}
                        {{ form_row(profilEditForm.city) }}
                    </div>
                </div>

                <div class="row w-75 mx-auto justify-content-center">
                    <button type="submit" class="btn btn-dark align-self-lg-center w-50">Modifier</button>
                </div>
                {{ form_end(profilEditForm) }}
            </div>
        </div>
    </div>



{% endblock %}
