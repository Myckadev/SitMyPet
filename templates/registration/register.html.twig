{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="mainContainer registerMain">
        <div class="header-text">
            <h1 class="text-center  ">Inscription</h1>
        </div>
        <div class="form-container mx-auto">
            {{ form_start(registrationForm) }}
            <div class="row">
                <div class="col">
                    {{ form_row(registrationForm.username) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.roles, {'attr': {'class': 'form-select'} }) }}
                </div>
                <div class="col">
                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.prenom) }}
                    {{ form_row(registrationForm.age) }}
                </div>
                <div class="col">
                    {{ form_row(registrationForm.adresse) }}
                    {{ form_row(registrationForm.ville) }}
                    {{ form_row(registrationForm.city) }}
                    {{ form_row(registrationForm.pays) }}
                </div>
            </div>
            <div class="row w-75 mx-auto justify-content-center">
                <div class="agreeTerms">
                    Veuillez accepter nos &nbsp;
                    <a href="{{ path('cgv') }}" target="_blank">
                        conditions d'utilisation &nbsp;
                    </a>
                    {{ form_row(registrationForm.agreeTerms) }}
                </div><button type="submit" class="btn btn-dark align-self-lg-center w-50">S'inscrire</button>
            </div>


            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
