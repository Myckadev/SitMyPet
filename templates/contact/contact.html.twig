{% extends 'base.html.twig' %}

{% block body %}
    <div class="mainContainer contactMain">
        <div class="form-container mx-auto">
            <div class="header-text my-3">
                <h1 class="text-center  ">Formulaire de contact</h1>
                <p class="contactInfo my-3 text-center">
                    Une question ? Un renseignement ? Un imprévu ? N'hésitez pas à nous contacter !
                </p>
            </div>
            {{ form_start(contactForm) }}
            <div class="row">
                <div class="col">
                    {{ form_row(contactForm.nom) }}
                    {{ form_row(contactForm.mail)}}

                </div>
                <div class="col">
                    {{ form_row(contactForm.prenom) }}
                    {{ form_row(contactForm.need) }}
                </div>
                <div class="contactMessage">
                    {{ form_row(contactForm.message) }}
                </div>
            </div>

            <div class="row w-75 mx-auto my-2 justify-content-center">
                <button type="submit" class="btn btn-dark align-self-lg-center w-50">Envoyer</button>
            </div>

            {{ form_end(contactForm) }}
        </div>
    </div>
{% endblock %}